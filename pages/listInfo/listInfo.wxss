/* pages/listInfo/listInfo.wxss */
.listInfoSwipe {
  height: 580rpx;
}
.listInfoSwipe image {
  min-width: 100%;
  height: 100%;
}
 .listInfo{
  display: flex;
  flex-direction: column;
  margin: 15rpx 0;
  padding: 5rpx;
}
 .listInfo .name{
  font-size:30rpx;
}
 .listInfo .phone,
 .listInfo .address,
 .listInfo .ctime{
  font-size:24rpx;
  color:#234
}

.introduction {
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  color: #456;
  font-size: 24rpx;
  line-height: 2;
}

.comments {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  color: #345;
  font-size: 24rpx;
}

.comments .item {
  display: flex;
  position: relative;
  flex-direction: column;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.comments .item .name {
  margin-top: 20rpx;
  font-size: 36rpx;
}